<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <% if bookmark.movie.present? %>
      <li><%= bookmark.movie.title %> - <%= bookmark.comment %></li>
    <% end %>
  <% end %>
</ul>

<%= simple_form_for ([@list, @bookmark]) do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Back to Lists', lists_path %>
